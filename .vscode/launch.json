  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Tests",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}"
    },
    {
      "name": "Pull kpt",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/krm-package",
      "args": [
        "./test/pull-kpt/in/config.yaml",
        "./test/pull-kpt/in/config.yaml"
      ]
    },
    {
      "name": "Push kpt",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/krm-package",
      "args": [
        "./test/push-kpt/in/config.yaml",
        "./test/push-kpt/in/deployment.yaml",
        "./test/push-kpt/in/service.yaml",
        "./test/push-kpt/in/configmap.yaml",
        "./test/push-kpt/in/config.yaml"
      ]
    }
  ]
}
